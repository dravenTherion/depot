<% if notice %>
    <aside id="notice"><%= notice %></aside>
<% end %>

<div class="main_header">
    <h1>Order</h1>
</div>

<div class="flex_table column">
    <p>
      <strong>Name:</strong>
      <%= @order.name %>
    </p>

    <p>
      <strong>Address:</strong>
      <%= @order.address %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= @order.email %>
    </p>

    <p>
      <strong>Pay type:</strong>
      <%= @order.pay_type %>
    </p>

    <div class='footerlinks small'>
      <%= link_to 'Edit', edit_order_path(@order) %> |
      <%= link_to 'Back', orders_path %>
    </div>
</div>