<!DOCTYPE html>
<html>
  <head>
    <title>Pragprog Online Store</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

      <div class="main_wrapper">

          <header class="main">
              <h1><%= @page_title %></h1>
          </header>

          <section class="main_content">
          
              <nav class="side_nav">
                  <ul>
                      <li class="neu_button"><a href="/">Home</a></li>
                      <li class="neu_button"><a href="/questions">Questions</a></li>
                      <li class="neu_button"><a href="/news">News</a></li>
                      <li class="neu_button"><a href="/contact">Contact</a></li>
                  </ul>
              </nav>

              <main class='<%= controller.controller_name %>'>
                  <%= yield %>
              </main>

          </section>

      </div>

  </body>
</html>
